<h1>Github repositories search</h1>
<%= form_tag(search_repositories_path, method: :get) do %>
  <div class="form-group">
    <div class="input-group mb-3">
      <%= text_field_tag :search, search_term, placeholder: "enter search term...", class: "form-control" %>
      <div class="input-group-append">
        <span class="input-group-text">ðŸ”Ž</span>
      </div>
    </div>
  </div>
<% end %>

<% if repos.empty? && !search_term.blank? %>
  <h3>No repositories found.</h3>
<% end %>

<% repos.each do |repo| %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">
        <%= repo.full_name %>
      </h5>
      <p class="card-text">
        <%= repo.description %>
      </p>
      <a href="<%= repo.html_url %>">
        Go to repository
      </a>
    </div>
  </div>
<% end %>

